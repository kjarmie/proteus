@using Webapp.Features.Home
@model Webapp.Features.Home.Home

@{
    Layout = "_Layout";
    ViewData["Title"] = "Home";
}
<div class="flex flex-col gap-8 flex-center h-full">
    <div class="flex flex-row justify-center gap-16 w-full pt-16">
        <a href="https://dotnet.microsoft.com/" target="_blank">
            <img src="images/dotnet.svg" class="aspect-square size-32" alt="Dotnet logo"/>
        </a>
        <a href="https://htmx.org/" target="_blank">
            <img src="images/htmx2.svg" class="aspect-square size-32" alt="Vite logo"/>
        </a>
        <a href="https://vitejs.dev" target="_blank">
            <img src="images/vite.svg" class="aspect-square size-32" alt="Vite logo"/>
        </a>

        <a href="https://tailwindcss.com/" target="_blank">
            <img src="images/tailwind.svg" class="aspect-square size-32" alt="Vite logo"/>
        </a>
    </div>
    <h1 class="text-center text-5xl">ASP.NET + HTMX + Vite + Tailwind</h1>
    <p class="text-center">And a sprinkling of other little technologies</p>
    <div class="flex flex-col items-center">
        <button hx-get="@CurrentTimeEndpoint.Url" hx-swap="innerHTML" hx-target="#time" class="block btn btn-small btn-link">Get the current time</button>
        <button hx-get="@PollingTimeEndpoint.Url" hx-swap="outerHTML transition:true" hx-target="#time" class="block btn btn-small btn-link">Start polling current time</button>
        <div id="time"></div>
    </div>

    <a href="@Examples.Url" class="text-center text-lg link">
        Watch for the page transitions
    </a>
</div>